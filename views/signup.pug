extends layout.pug

block content
    h1 SIGN UP HERE
    if errors.length > 0
        each error in errors
            p= error
    form(action="/users/signup" method="post") 
        input(type="hidden" name="_csrf" value=csrfToken)
        label(for="username") Username:
        input(type="text" name="username" value=body.username)
        label(for="email") Email:
        input(type="text" name="email" value=body.email)
        label(for="password") Password:
        input(type="text" name="password")
        label(for="faveBread") Favorite Bread:
        select(name="faveBread")
            each bread in breads 
                option(value=bread selected=(bread === body.faveBread))= bread 
        button Sign Up